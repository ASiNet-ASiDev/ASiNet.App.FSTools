<Canvas x:Class="ASiNet.FSTools.VirtualWorkspace.VirtualWorkspaceArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASiNet.FSTools.VirtualWorkspace"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="PanelRoot" ClipToBounds="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <Grid x:Name="AreaRoot" Background="#14000000" 
          Width="262144" 
          Height="262144" 
          MouseWheel="AreaRoot_MouseWheel" 
          MouseMove="AreaRoot_MouseMove">
        <Grid.RenderTransform>
            <MatrixTransform x:Name="matrixTransform"/>
        </Grid.RenderTransform>
        <Button Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Canvas>
