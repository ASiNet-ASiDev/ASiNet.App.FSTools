<Border x:Class="ASiNet.FSTools.VirtualWorkspace.AreaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ASiNet.FSTools.VirtualWorkspace"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800" ClipToBounds="True"
        Background="White"
        BorderThickness="2" BorderBrush="Black">
    <Border.RenderTransform>
        <MatrixTransform x:Name="matrixTransform"/>
    </Border.RenderTransform>
    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Header" Height="20" Background="White" MouseMove="Header_MouseMove" MouseLeftButtonDown="Header_MouseLeftButtonDown" MouseLeftButtonUp="Header_MouseLeftButtonUp">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" Text="Title" VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="Title"/>
            <Button Grid.Column="2" Width="20"/>
            <Button Grid.Column="3" Width="20"/>
            <Button Grid.Column="4" Width="20"/>
        </Grid>
        <Rectangle x:Name="ResizeHandler" Grid.Row="1" Width="10" Height="10" VerticalAlignment="Bottom" Panel.ZIndex="1" HorizontalAlignment="Right" Fill="Red" MouseMove="ResizeHandler_MouseMove"/>
    </Grid>
</Border>
