<Window x:Class="ASiNet.App.FSTools.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ASiNet.FSTools.Controls;assembly=ASiNet.FSTools.Controls"
        xmlns:vm="clr-namespace:ASiNet.App.FSTools.ViewModels"
        xmlns:local="clr-namespace:ASiNet.App.FSTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <controls:SearchBox Text="{Binding CurrentPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ItemsSource="{Binding SearchResultItems, Mode=OneWay}" 
                            SelectedItemCommand="{Binding SelectedSearchItemCommand}" Focused="{Binding IsFocusedSearchBox, Mode=OneWayToSource}"
                            ToParentCommand="{Binding BackToParentCommand}"/>
        <controls:FileSystemEntriesList  Grid.Row="1"
            x:Name="FSRoot"
            ItemsSource="{Binding Items}" 
            OpenCommand="{Binding OpenFileCommand}" 
            IsSelectedItems="{Binding IsSelectedItems, Mode=OneWayToSource}"
            SelectedItems="{Binding SelectedItems}" 
            >
            <controls:FileSystemEntriesList.ContextMenu>
                <controls:FilesContextMenu FileSpecificMenuOptionsIsEnabled="{Binding IsSelectedItems}"
                                           OpenFileCommand="{Binding OpenFilesCommand}"
                                           RenameFileCommand="{Binding RenameFilesCommand}"
                                           MoveFileCommand="{Binding MoveFilesCommand}"
                                           CopyFileCommand="{Binding CopyFilesCommand}"
                                           DeleteFileCommand="{Binding DeleteFilesCommand}" 
                                           BackToParentCommand="{Binding BackToParentCommand}"
                                           />
            </controls:FileSystemEntriesList.ContextMenu>
        </controls:FileSystemEntriesList>
    </Grid>
</Window>
